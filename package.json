{
  "name": "my-project-template",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter @template/frontend dev",
    "dev:api": "pnpm --filter @template/backend dev",
    "dev:fullstack": "cd infra/docker && docker compose up --build",
    "docker:up": "cd infra/docker && docker compose up -d",
    "docker:down": "cd infra/docker && docker compose down",
    "docker:build": "cd infra/docker && docker compose build",
    "docker:logs": "cd infra/docker && docker compose logs -f",
    "db:up": "cd infra/docker && docker compose up -d postgres redis pgadmin",
    "db:down": "cd infra/docker && docker compose down postgres redis pgadmin",
    "db:restart": "pnpm db:down && pnpm db:up",
    "db:logs": "cd infra/docker && docker compose logs -f postgres redis",
    "db:push": "pnpm --filter @template/backend db:push",
    "db:migrate": "pnpm --filter @template/backend db:migrate",
    "db:seed": "pnpm --filter @template/backend db:seed",
    "db:studio": "pnpm --filter @template/backend db:studio",
    "atlas:diff": "atlas migrate diff --env dev",
    "atlas:apply": "atlas migrate apply --env dev --url \"$DATABASE_URL\"",
    "atlas:apply:prod": "atlas migrate apply --env prod --url \"$DATABASE_URL\"",
    "atlas:lint": "atlas migrate lint --env dev",
    "atlas:down": "atlas migrate down --env dev --url \"$DATABASE_URL\" 1",
    "atlas:status": "atlas migrate status --env dev --url \"$DATABASE_URL\"",
    "atlas:validate": "atlas schema validate --env dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter @template/frontend start",
    "start:api": "pnpm --filter @template/backend start",
    "lint": "eslint . --ext .ts,.tsx --cache",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --cache",
    "type-check": "pnpm -r type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality-check": "pnpm codegen && pnpm gen:messages && pnpm type-check && pnpm lint",
    "quality-fix": "pnpm lint:fix && pnpm format",
    "codegen": "node tools/codegen/generate-ts-client.mjs",
    "gen:messages": "node tools/message-codegen/generate.js",
    "verify:messages": "node tools/message-codegen/verify.js",
    "ci:verify:messages": "node tools/message-codegen/ci-verify.js",
    "msg:add": "node tools/message-codegen/add-message.js",
    "db:generate": "pnpm --filter @template/backend exec prisma generate",
    "postinstall": "echo 'Setup completed'",
    "prebuild": "pnpm codegen && pnpm db:generate",
    "prepare": "husky",
    "clean": "pnpm -r clean"
  },
  "dependencies": {
    "next": "15.5.2",
    "openapi-fetch": "^0.12.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.6.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@template/eslint-plugin-message-keys": "workspace:*",
    "@types/node": "^22.8.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.5.2",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.2.10",
    "openapi-typescript": "^7.4.2",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "size-limit": "^11.1.6",
    "@size-limit/preset-small-lib": "^11.1.6",
    "tailwindcss": "^3.4.14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --cache"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "name": "Messages core (keys + types)",
      "path": "packages/shared/src/messages/index.ts",
      "limit": "5 KB",
      "webpack": false
    },
    {
      "name": "Messages utils",
      "path": "packages/shared/src/messages/utils.ts",
      "limit": "3 KB",
      "webpack": false
    },
    {
      "name": "Messages locales (Japanese)",
      "path": "packages/shared/src/messages/locales/ja.ts",
      "limit": "8 KB",
      "webpack": false
    },
    {
      "name": "Messages locales (English)",
      "path": "packages/shared/src/messages/locales/en.ts",
      "limit": "8 KB",
      "webpack": false
    }
  ]
}
