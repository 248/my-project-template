{
  "name": "my-project-template",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter @template/frontend dev",
    "dev:api": "pnpm --filter @template/backend dev",
    "dev:fullstack": "pnpm run dev:api & pnpm run dev",
    "dev:docker": "cd infra/docker && docker compose up --build",
    "dev:docker:detached": "cd infra/docker && docker compose up --build -d",
    "docker:stop": "cd infra/docker && docker compose down",
    "docker:clean": "cd infra/docker && docker compose down -v --rmi all",
    "docker:logs": "cd infra/docker && docker compose logs -f",
    "db:up": "cd infra/docker && docker compose up -d postgres redis",
    "db:down": "cd infra/docker && docker compose down postgres redis",
    "db:restart": "pnpm db:down && pnpm db:up",
    "db:logs": "cd infra/docker && docker compose logs -f postgres redis",
    "db:push": "pnpm --filter @template/backend db:push",
    "db:migrate": "pnpm --filter @template/backend db:migrate",
    "db:seed": "pnpm --filter @template/backend db:seed",
    "db:studio": "pnpm --filter @template/backend db:studio",
    "build": "pnpm -r build",
    "start": "pnpm --filter @template/frontend start",
    "start:api": "pnpm --filter @template/backend start",
    "lint": "eslint . --ext .ts,.tsx --cache",
    "lint:fix": "eslint . --ext .ts,.tsx --fix --cache",
    "type-check": "pnpm -r type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality-check": "pnpm codegen && pnpm type-check && pnpm lint",
    "quality-fix": "pnpm lint:fix && pnpm format",
    "codegen": "node tools/codegen/generate-ts-client.mjs",
    "db:generate": "pnpm --filter @template/backend exec prisma generate",
    "postinstall": "echo 'Setup completed'",
    "prebuild": "pnpm codegen && pnpm db:generate",
    "prepare": "husky",
    "clean": "pnpm -r clean"
  },
  "dependencies": {
    "next": "15.5.2",
    "openapi-fetch": "^0.12.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.6.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "@types/node": "^22.8.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.5.2",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.2.10",
    "openapi-typescript": "^7.4.2",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --cache",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
