{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@db": ["./src/server/db/client.ts"],
      "@db/*": ["./src/server/db/*"],
      "@template/shared": ["../../packages/shared/src"],
      "@template/ui": ["../../packages/ui/src"],
      "@template/config": ["../../packages/config/src"],
      "@template/api-contracts-ts": [
        "../../packages/api-contracts/codegen/ts/src"
      ]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["next-env.d.ts", "src/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/server/generated/**"]
}
