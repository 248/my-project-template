{
  "name": "@template/api-contracts-ts",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript contracts generated from OpenAPI specification",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "generate": "node ../../../tools/codegen/generate-ts-client.mjs",
    "build": "tsc -p tsconfig.json",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "openapi-fetch": "^0.12.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@template/config": "workspace:*",
    "typescript": "^5.7.3"
  }
}
